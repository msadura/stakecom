{
  "name": "@comstaked/server",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "build": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap",
    "dev": "tsx watch --clear-screen=false index",
    "serve": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap && node dist/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@comstaked/db": "^0.1.0",
    "@comstaked/commune-sdk": "^0.1.0",
    "fastify": "^4.26.1",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@comstaked/eslint-config": "^0.2.0",
    "@comstaked/prettier-config": "^0.1.0",
    "@comstaked/tsconfig": "^0.1.0",
    "@types/jsonwebtoken": "^9.0.4",
    "esbuild": "^0.19.5",
    "tsx": "^3.14.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@comstaked/eslint-config/base"
    ]
  },
  "prettier": "@comstaked/prettier-config"
}