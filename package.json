{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=20.11.0",
    "pnpm": "^8"
  },
  "packageManager": "pnpm@8.15.4+sha256.cea6d0bdf2de3a0549582da3983c70c92ffc577ff4410cbf190817ddc35137c2",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "pnpm -F db push",
    "db:generate": "pnpm -F db generate",
    "db:studio": "pnpm -F db studio",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "tsc": "turbo typecheck",
    "pm2:server": "pm2 start --name stakecomai-server --interpreter ~/.bun/bin/bun ./apps/server/src/index.ts",
    "stats": "bun apps/miner-stats/src/index.ts",
    "unstake": "bun apps/miner-stats/src/unstakeAndTransfer.ts",
    "proxy": "bun apps/twitterProxy/src/index.ts",
    "serve": "bun apps/aim-server/src/index.ts",
    "serve:dev": "DEV_MODE=true MINER_NAME=dev PORT=8811 bun --watch apps/aim-server/src/index.ts"
  },
  "devDependencies": {
    "@stakecom/prettier-config": "workspace:^0.1.0",
    "@turbo/gen": "^1.12.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.3",
    "typescript": "5.4.5"
  },
  "prettier": "@stakecom/prettier-config"
}
